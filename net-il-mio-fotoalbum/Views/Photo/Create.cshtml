@model Photo

<div class="text-center py-1 mt-5">
    <h1>Crea un nuovo elemento</h1>
</div>

<div class="container shadow-lg rounded p-5" style="margin-top: 5rem">

    <form asp-controller="Photo" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label text-uppercase">Nome:</label>
            <input asp-for="@Model.Title" class="form-control" type="text" placeholder="Inserire un nome" autofocus="true">
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label text-uppercase">Descrizione:</label>
            <input asp-for="@Model.Description" class="form-control" type="text" placeholder="Inserire una descrizione">
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.ImageUrl" class="form-label text-uppercase">Link immagine:</label>
            <input asp-for="@Model.ImageUrl" class="form-control" type="text" placeholder="Inserire un url per l'immagine">
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-grid mt-5">
            <button class="btn btn-success" type="submit">Salva</button>
        </div>

    </form>
</div>